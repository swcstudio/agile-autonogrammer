{
  "name": "@katalyst/integration-tools",
  "version": "1.0.0",
  "description": "Comprehensive integration management, dependency auditing, security scanning, and monitoring tools for Katalyst",
  "main": "./dist/tools/index.js",
  "types": "./dist/tools/index.d.ts",
  "bin": {
    "katalyst-integration-tools": "./dist/tools/cli.js",
    "kit": "./dist/tools/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/tools/index.js",
      "require": "./dist/tools/index.cjs",
      "types": "./dist/tools/index.d.ts"
    },
    "./auditor": {
      "import": "./dist/tools/dependency-auditor.js",
      "types": "./dist/tools/dependency-auditor.d.ts"
    },
    "./security": {
      "import": "./dist/tools/security-scanner.js",
      "types": "./dist/tools/security-scanner.d.ts"
    },
    "./tester": {
      "import": "./dist/tools/integration-tester.js",
      "types": "./dist/tools/integration-tester.d.ts"
    },
    "./monitor": {
      "import": "./dist/tools/monitoring-daemon.js",
      "types": "./dist/tools/monitoring-daemon.d.ts"
    },
    "./cli": {
      "import": "./dist/tools/cli.js",
      "types": "./dist/tools/cli.d.ts"
    }
  },
  "files": [
    "dist/tools/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "dev": "tsc --watch",
    "test": "deno test --allow-all src/tools/**/*.test.ts",
    "test:node": "npm run build && node --test dist/tools/**/*.test.js",
    "lint": "biome check src/tools/",
    "lint:fix": "biome check --apply src/tools/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "audit": "node dist/tools/cli.js dep audit",
    "security": "node dist/tools/cli.js security scan",
    "monitor": "node dist/tools/cli.js monitor start",
    "doctor": "node dist/tools/cli.js doctor",
    "init": "node dist/tools/cli.js init"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "semver": "^7.5.4",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "listr2": "^7.0.2",
    "boxen": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@biomejs/biome": "^1.5.0",
    "typescript": "^5.3.0",
    "rollup": "^4.9.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "rollup-plugin-terser": "^7.0.2"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0",
    "esbuild": ">=0.19.0",
    "vite": ">=4.0.0"
  },
  "keywords": [
    "katalyst",
    "integration",
    "dependency",
    "security",
    "monitoring",
    "audit",
    "vulnerability",
    "testing",
    "ci-cd",
    "devtools"
  ],
  "author": "Katalyst Team <team@katalyst.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/katalyst/core.git",
    "directory": "packages/integrations"
  },
  "bugs": {
    "url": "https://github.com/katalyst/core/issues"
  },
  "homepage": "https://katalyst.dev",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}