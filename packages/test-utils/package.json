{
  "name": "@agile/test-utils",
  "version": "0.1.0",
  "description": "Testing utilities for Agile Programmers hook-based architecture",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
