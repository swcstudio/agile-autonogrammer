{
  "name": "@katalyst/build-system",
  "version": "0.1.0",
  "private": false,
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./rsbuild": "./src/rsbuild.config.ts",
    "./webpack": "./src/webpack.config.ts",
    "./vite": "./src/vite.config.ts",
    "./rspack": "./src/rspack.config.ts",
    "./turbo": "./src/turbo.config.ts",
    "./nx": "./src/nx.config.ts",
    "./platforms/desktop": "./platforms/desktop/index.ts",
    "./platforms/mobile": "./platforms/mobile/index.ts",
    "./platforms/webxr": "./platforms/webxr/index.ts",
    "./platforms/metaverse": "./platforms/metaverse/index.ts"
  },
  "scripts": {
    "build": "deno task build",
    "build:desktop": "cd platforms/desktop && npm run build",
    "build:mobile": "cd platforms/mobile && npm run build",
    "build:webxr": "cd platforms/webxr && npm run build",
    "build:metaverse": "cd platforms/metaverse && npm run build",
    "build:all": "npm run build:desktop && npm run build:mobile && npm run build:webxr && npm run build:metaverse",
    "dev": "deno task dev",
    "dev:desktop": "cd platforms/desktop && npm run dev",
    "dev:mobile": "cd platforms/mobile && npm run dev",
    "dev:webxr": "cd platforms/webxr && npm run dev",
    "dev:metaverse": "cd platforms/metaverse && npm run dev",
    "lint": "biome check .",
    "typecheck": "deno check **/*.ts"
  },
  "dependencies": {
    "@rsbuild/core": "^0.4.0",
    "@rspack/core": "^0.5.0",
    "@tauri-apps/api": "^1.5.0",
    "@tauri-apps/cli": "^1.5.0",
    "webpack": "^5.90.0",
    "vite": "^5.0.0",
    "turbo": "^1.12.0",
    "nx": "^18.0.0",
    "esbuild": "^0.20.0",
    "rollup": "^4.0.0",
    "capacitor": "^5.0.0",
    "react-native": "^0.73.0",
    "expo": "^50.0.0",
    "three": "^0.160.0",
    "@react-three/fiber": "^8.15.0",
    "@react-three/xr": "^5.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/three": "^0.160.0"
  }
}